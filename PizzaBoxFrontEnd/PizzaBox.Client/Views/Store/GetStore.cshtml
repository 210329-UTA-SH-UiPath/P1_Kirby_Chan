@model PizzaBox.Client.Models.Store

@{
    ViewData["Title"] = "GetStore";
}

<h1>Choose your Store.</h1>
<form asp-controller="Store" asp-action="StoreSelected" method="post">
    <select class="form-select form-select-lg mb-3" asp-for="ID" asp-items="ViewBag.Stores"> </select>
    <input type="submit" value="Select One" />
</form>